extends layout

block content
  h1= title
  -
    let items = results || []  
  div(class="container-fluid")
    div(class="row")
      if items.length  
        each item, index in items
          div(class="col-sm-2", onclick=`buy(${index})`)
            p Name: #{item.name}
            p Location: #{item.location}
            p Altitude: #{item.altitude}  
            div(onclick=`buy(${index})`)
      else
        p No results available
  script.
    function buy(index) {
      alert(`You purchased item ${index}`);
    }
