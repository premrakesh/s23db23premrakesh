extends layout
block content
  h1= title
  form(id='mountainsForm', action="/resource/mountains", method="POST")
    div.form-group
      label.mountainsAttr(for='costume_type') Mountain name
      input#name(type='text', name='name')
    div.form-group
      label.mountainsAttr(for='size') Mountain location
      input#location(type='text', name='location')
    div.form-group
      label.mountainsAttr(for='altitude') Mountain Altitude
      input#altitude(type='number', name='altitude')
    input(type="submit")
  script.
    document.forms['mountainsForm'].addEventListener('submit', (event) => {
      event.preventDefault();
      // TODO do something here to show user that form is being submitted
      fetch(event.target.action, {
        method: 'POST',
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form
      }).then((resp) => {
        return resp.json(); // or resp.text() or whatever the server sends
      }).then((body) => {
        alert("Save succeeded");
        // TODO handle body
      }).catch((error) => {
        // TODO handle error
        alert("Save failed " + error);
      });
    });
