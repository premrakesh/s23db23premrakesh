extends layout
block content
  h1= title
  - let mountainid = toShow._id
  - let name = toShow.name
  - let location = toShow.location
  - let altitude = toShow.altitude

  div.row(class='mb-2')
    div.mr-1 ID is
    div #{mountainid}

  - let actionid = "/resource/mountains/" + mountainid
  form(id='MountainsForm', action= actionid, method="PUT")
    div.form-group
      label.MountainsAttr(for='name') Mountain name
      input#name(type='text', name='name', value= name )
    div.form-group
      label.MountainsAttr(for='location') Mountain location
      input#size(type='text', name='location', value= location )
    div.form-group
      label.MountainsAttr(for='altitude') Mountain altitude
      input#cost(type='number', name='altitude', value= altitude )
    input(type="submit")

  script.
    document.forms['MountainsForm'].addEventListener('submit', (event) => {
      event.preventDefault();
      // TODO do something here to show user that the form is being submitted
      fetch(event.target.action, {
        method: 'PUT',
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form
      }).then((resp) => {
        return resp.json(); // or resp.text() or whatever the server sends
      }).then((body) => {
        alert("Update succeeded");
        // TODO handle body
      }).catch((error) => {
        // TODO handle error
        alert("Update failed " + error );
      });
    });
